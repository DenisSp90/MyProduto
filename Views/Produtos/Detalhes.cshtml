@{
}
@model Produto

<section class="section">
    <div class="container">
        <h1 class="title">Detalhes do Produto</h1>

        <div class="box">
            <div class="field">
                <label class="label">Nome</label>
                <div class="control">
                    <input class="input" type="text" value="@Model.Nome" readonly>
                </div>
            </div>

            <div class="field">
                <label class="label">Preço</label>
                <div class="control">
                    <input class="input" type="text" value="@Model.Preco.ToString("C2")" readonly>
                </div>
            </div>

            <div class="field">
                <label class="label">Quantidade em Estoque</label>
                <div class="control">
                    <input class="input" type="text" value="@Model.QuantidadeEstoque" readonly>
                </div>
            </div>

            <div class="field">
                <label class="label">Estoque Mínimo</label>
                <div class="control">
                    <input class="input" type="text" value="@Model.EstoqueMinimo" readonly>
                </div>
            </div>

            <div class="field">
                <label class="label">Última Movimentação</label>
                <div class="control">
                    <input class="input" type="text" value="@Model.UltimaMovimentacao.ToString("dd/MM/yyyy HH:mm")" readonly>
                </div>
            </div>

            <div class="field">
                <label class="label">Movimentações de Estoque</label>
                <div class="control">
                    @if (Model.MovimentacoesEstoque != null && Model.MovimentacoesEstoque.Any())
                    {
                        <ul>
                            @foreach (var movimentacao in Model.MovimentacoesEstoque)
                            {
                                <li>@movimentacao.TipoMovimentacao (@movimentacao.DataMovimentacao.ToString("dd/MM/yyyy HH:mm"))</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Sem movimentações registradas.</p>
                    }
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <a href="@Url.Action("Index", "Produto")" class="button is-primary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>
